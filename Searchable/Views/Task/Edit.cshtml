@model Searchable.Models.Tassk
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Edit Task</h1>
                    <p class="text-center text-danger">@TempData["message"]</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input type="text" asp-for="Title" class="form-control"
                                   placeholder="Enter Category Name" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="DueDate"></label>
                            <input type="text" asp-for="DueDate" class="form-control" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="IsCompleted"></label>
                            <input type="text" asp-for="IsCompleted" class="form-control" />
                            <span asp-validation-for="IsCompleted" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="UserId"></label>
                            <input type="text" asp-for="UserId" class="form-control" />
                            <span asp-validation-for="UserId" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="CategoryId"></label>
                            <input type="text" asp-for="CategoryId" class="form-control" />
                            <span asp-validation-for="CategoryId" class="text-danger"></span>

                        </div>



                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success float-end" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
