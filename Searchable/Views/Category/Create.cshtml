@model Searchable.Models.Category
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add Category</h1>
                    <p class="text-center text-danger">@TempData["message"]</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="form-control"
                                   placeholder="Enter Category Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Createdby"></label>
                            <input type="text" asp-for="Createdby" class="form-control" />
                            <span asp-validation-for="Createdby" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CreatedDate"></label>
                            <input type="text" asp-for="CreatedDate" class="form-control" />
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Modifiedby"></label>
                            <input type="text" asp-for="Modifiedby" class="form-control"
                                   placeholder="Enter modifier Name" />
                            <span asp-validation-for="Modifiedby" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ModifiedDate"></label>
                            <input type="text" asp-for="ModifiedDate" class="form-control"
                                   placeholder="Enter Modified Date" />
                            <span asp-validation-for="ModifiedDate" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success float-end" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
