@model Searchable.Models.Category
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-12 ">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Edit Category</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="hidden" asp-for="CategoryId" />
                            <input type="text" asp-for="Name" class="form-control"
                                   placeholder="Enter Category Name" />

                            <label asp-for="Createdby"></label>
                            <input type="text" asp-for="Createdby" class="form-control" />

                            <label asp-for="CreatedDate"></label>
                            <input type="text" asp-for="CreatedDate" class="form-control" />

                            <label asp-for="Modifiedby"></label>
                            <input type="text" asp-for="Modifiedby" class="form-control"
                                   placeholder="Enter modifier Name" />

                            <label asp-for="ModifiedDate"></label>
                            <input type="text" asp-for="ModifiedDate" class="form-control"
                                   placeholder="Enter Modified Date" />

                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success float-end" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
