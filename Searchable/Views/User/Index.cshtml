@using Sheetal.Requirement;


@model IEnumerable<Searchable.Models.User>

@{
    ViewData["Title"] = "Index";

    Pager pager = new Pager();

    int pageNo = 0;

    if(ViewBag.Pager !=null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }

    SortModel sortModel = (SortModel)ViewData["sortModel"];

}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">


<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-success ml-1">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <i class="@sortModel.GetColumn("UserId").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortexpression="@sortModel.GetColumn("UserId").SortExpression">
                    @Html.DisplayNameFor(model => model.UserId)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("UserName").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortexpression="@sortModel.GetColumn("UserName").SortExpression">
                    @Html.DisplayNameFor(model => model.UserName)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("Email").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortexpression="@sortModel.GetColumn("Email").SortExpression">
                    @Html.DisplayNameFor(model => model.Email)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("Password").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortexpression="@sortModel.GetColumn("Password").SortExpression">
                    @Html.DisplayNameFor(model => model.Password)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-info">Edit</a> |
          
                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_pager" model="@pager"/>



